fn viewport_snapshot fname frame =(		snapshot_name = (getDir #preview)+"/" + fname;	view_size = getViewSize()	anim_bmp = bitmap view_size.x view_size.y filename:snapshot_name	sliderTime = frame	dib = gw.getViewportDib()	copy dib anim_bmp	save anim_bmp	close anim_bmp	gc())viewport_snapshot "temp.jpg" 30fdisplay snapshot_name = (getDir #preview)+"/" + "reperages"view_size = getViewSize()anim_bmp = bitmap view_size.x view_size.y filename:snapshot_namesliderTime = 0fdib = gw.getViewportDib()copy dib anim_bmp-- save anim_bmp-- close anim_bmpdisplay anim_bmpdisplay (gw.getViewportDib())